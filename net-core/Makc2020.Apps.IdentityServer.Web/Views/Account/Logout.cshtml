@using Makc2020.Mods.IdentityServer.Web.Mvc.Parts.Account.Jobs.Logout.Get

@model ModIdentityServerWebMvcPartAccountJobLogoutGetOutput

<div class="logout-page">
    <div class="page-header">
        <h1>@Model.PageTitle</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>Would you like to logout of IdentityServer?</p>
            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId"  />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">@Model.ConfirmTitle</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>